<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane maxHeight="400.0" maxWidth="600.0" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.knapsack.SceneController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="14.0" layoutY="14.0" prefHeight="374.0" prefWidth="189.0">
         <children>
            <Label text="Number of items">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="nField" alignment="CENTER" style="-fx-max-width: 100;">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </TextField>
            <Label text="Seed">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="seedField" alignment="CENTER" style="-fx-max-width: 100;">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </TextField>
            <Label text="Capacity">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="capacityField" alignment="CENTER" style="-fx-max-width: 100;">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </TextField>
            <Button fx:id="generateButton" mnemonicParsing="false" onAction="#handleGenerateButtonAction" text="Generate">
               <VBox.margin>
                  <Insets bottom="15.0" top="15.0" />
               </VBox.margin>
            </Button>
            <TextArea fx:id="generatedItems" />
         </children>
      </VBox>
      <VBox layoutX="213.0" layoutY="14.0" prefHeight="374.0" prefWidth="371.0">
         <children>
            <TextArea fx:id="solution" prefHeight="379.0" prefWidth="371.0" />
         </children>
      </VBox>
   </children>
</Pane>
